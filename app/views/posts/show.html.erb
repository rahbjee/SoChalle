<h2><%= @post.content %></h2>
<p>Posted by: <%= @post.user.email %> <%= time_ago_in_words(@post.created_at) %> ago </p>
<h3> Comments: </h3>
<%= render @post.comments %>
<p>Reply to Post
<%= render 'comments/form' %></p>
<br>

<%= link_to "Back to Post List", posts_path %>

<% if user_signed_in? %>
	<% if @post.user_id == current_user.id %>
		<%= link_to "Edit Post", edit_post_path %>
		<%= link_to "Delete Post", post_path(@post), method: :delete, data: { confirm: "Are you sure you want to delete?"} %>
	<% end %>
<% end %>